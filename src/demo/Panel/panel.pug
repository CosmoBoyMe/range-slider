include ../components/button/button.pug
include ../components/input-field/input-field.pug
include ../components/toggle-field/toggle-field.pug

mixin panel({ min = 0, max = 10, step = 1, scaleCounts = 11, values = [5, 6], isVertical = true, withScale = true, withTooltip = true, withProgress = true } = {})
  .panel.js-panel
    .panel__fields
      .panel__min-field.js-panel__min-field
        +input-field("min value", min)
      .panel__max-field.js-panel__max-field
        +input-field("max value", max)
      .panel__step-field.js-panel__step-field
        +input-field("step", step)
      .panel__scale-counts-field.js-panel__scale-counts-field
        +input-field("scale counts", scaleCounts)
    .panel__thumbs-values.js-panel__thumbs-values
    .panel__add-new-thumb.js-panel__add-new-thumb
      .panel__add-new-thumb-field.js-panel__add-new-thumb-field
        +input-field("new thumb")
      .panel__add-new-thumb-button-field.js-panel__add-new-thumb-button-field
        +button("+")
    .panel__toggles
      .panel__toggle-vertical-field.js-panel__toggle-vertical-field
        +toggle-field("vertical", isVertical)
      .panel__toggle-scale-field.js-panel__toggle-scale-field
        +toggle-field("scale", withScale)
      .panel__toggle-tooltip-field.js-panel__toggle-tooltip-field
        +toggle-field("tooltip", withTooltip)
      .panel__toggle-progress-field.js-panel__toggle-progress-field
        +toggle-field("progress", withProgress)
